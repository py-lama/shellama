# SheLLama Environment Variables

# Server configuration
PORT=8002
HOST=0.0.0.0
DEBUG=False

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=shellama.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S

# Security settings
SECRET_KEY=change_this_to_a_secure_random_string
ALLOW_CORS=True
CORS_ORIGINS=*

# File operation settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=md,py,txt,json,yaml,yml,js,html,css,sh,bash
BASE_DIRECTORY=/tmp  # Base directory for file operations

# Shell command settings
ALLOWED_COMMANDS=ls,cat,echo,mkdir,touch,rm,cp,mv,grep,find,pwd,whoami,date,df,du
DISABLED_COMMANDS=sudo,su,chmod,chown,dd,mkfs,fdisk,mount,umount,apt,yum,dnf
COMMAND_TIMEOUT=30  # Timeout in seconds for shell commands

# Git settings
GIT_ENABLED=True
GIT_MAX_REPO_SIZE=104857600  # 100MB in bytes

# API Gateway settings
APILAMA_URL=http://localhost:8080

# Debug settings
DEBUG_WINDOW_ENABLED=True
DEBUG_MAX_ENTRIES=1000

# Error handling settings
DETAILED_ERRORS=True  # Show detailed error information in responses
LOG_ERRORS=True       # Log all errors

# Performance settings
THREAD_POOL_SIZE=10   # Number of threads for background tasks
